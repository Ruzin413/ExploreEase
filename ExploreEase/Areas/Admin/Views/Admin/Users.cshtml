@model IEnumerable<Models.Models.ExploreEaseUser>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var serial = 1;
}
<h2>All Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>No</th>
            <th>Email</th>
            <th>Full Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            if (user.Email == "Admin413@gmail.com")
            {
                continue;
            }
            <tr>
                <td>@serial</td>
                <td>@user.Email</td>
                <td>@user.FullName</td>
                <td>
                    <form asp-area="Admin" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
            serial++;
        }
    </tbody>
</table>
<script src="~/js/user.js"></script>
